@model EmployeeModel

@section Css{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap4.min.css" />
}
@section Scripts{
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>employees Table</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <div class="row">
        <div class="col-md-12">
            <h1>Employees Table</h1>
            <hr />
            <table id="myTable" class="table table-bordered">
                <thead>
                    <tr>
                        <td style="width:30px;">Id</td>
                        <td style="width:50px;">Name</td>
                        <td style="width:50px;">SurName</td>
                        <td style="width:50px;">Country</td>
                        <td style="width:50px;">Email</td>
                        <td style="width:50px;">Salary</td>
                        <td style="width:50px;">Department Name</td>
                        <td style="width:150px;"></td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Employees.Count() > 0)
                    {
                        @foreach (var item in Model.Employees)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.SurName</td>
                                <td>@item.Country</td>
                                <td>@item.Email</td>
                                <td>@item.Salary</td>
                                <td>@item.Department.DepartmentName</td>
                                <td>
                                    <a asp-controller="Home" asp-action="UpdateEmployee" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                    <form asp-controller="Home" asp-action="DeleteEmployee" method="post" style="display:inline;">
                                        <input type="hidden" name="empId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="row my-2 ">
            <div class="col-md-12 d-flex justify-content-end">
                <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="AddEmployee">Add New Employee</a>
            </div>
        </div>
        <div class="row my-2 ">
            <div class="col-md-12 d-flex justify-content-end">
                <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="AddDepartment">Add New Department</a>
            </div>
        </div>
        <div class="row my-2 ">
            <div class="col-md-12 d-flex justify-content-end">
                <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="ViewAllDepartments">View All Departments</a>
            </div>
        </div>
    </div>
</body>
</html>