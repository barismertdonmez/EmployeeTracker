@model Data.DataModel.UpdateEmployeeDataModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <h1 class="h3">Add Employee</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Home" asp-action="UpdateEmployee" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group row mt-2">
                    <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="SurName" class="col-sm-3 col-form-label">SurName</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="SurName">
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Country" class="col-sm-3 col-form-label">Country</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Country">
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Email">
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Salary" class="col-sm-3 col-form-label">Salary</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Salary">
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-sm-3 col-form-label">
                        <label>Depatrman Adı Seçin</label>
                    </div>
                    <div class="col-sm-9">
                        <select class="form-control" id="statesSelect" name="departmentId" multiple>
                            @foreach (var item in ViewBag.Departments)
                            {
                                <option value="@item.Id" id="@item.Id">@item.DepartmentName</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Save Employee</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#statesSelect").select2();
        });
    </script>
}
